              }
            ],
            "url": {
              "raw": "{{base_url}}/clientes?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["clientes"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Número de página"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Clientes por página"
                }
              ]
